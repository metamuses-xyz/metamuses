# MetaMuses API Production Configuration
# For Hetzner ARM64 with 16 CPUs and 32GB RAM

# Server Configuration
HOST=0.0.0.0
PORT=8081

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379
REDIS_QUEUE_PREFIX=metamuse

# Model Configuration
MODELS_DIR=/opt/metamuses-api/models

# Worker Process Configuration
# For 16 CPUs: Use 4 workers with 4 threads each
# Alternative: Use 2 workers with 8 threads each (better for longer responses)
TOTAL_WORKERS=4
THREADS_PER_WORKER=4
BATCH_SIZE=512
CONTEXT_SIZE=2048

# Tier Configuration
ENABLE_FAST_TIER=true
ENABLE_MEDIUM_TIER=false
ENABLE_HEAVY_TIER=false

# Cache Configuration (disabled until Qdrant is set up)
ENABLE_SEMANTIC_CACHE=false
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_TTL_HOURS=24

# Logging
RUST_LOG=info
